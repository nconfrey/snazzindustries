extends ../layouts/default

include ../mixins/article
block content
    div(style="text-align: center;")
        h1 Snazz Industries
        .lead Lego Arbitrage and Lego Reselling: How to make money with Lego
        hr
        h5 #{moment(Date.now()).format('LL')}
        hr(style="border-top: 3px solid #eee;")
            
    .row
        .col-sm-8
            .blog
                each post in posts.results
                    +article(post)
        .col-sm-4
            .panel.panel-default
                .panel-heading
                    h3.panel-title: Our Best Investments
                .panel-body
                    each set in data
                        h4=set.ASIN
                        a(href=set.URL) 
                          img.image(src=set.Image, alt="Something is fucked")
                        a(href=set.URL) 
                          p= ('Price Now: ' + set.NewPrice)
                        p='Price Originally: ' + set.OriginPrice
                        p='Profit: $' + set.Profit
                        p='Return on Investment: ' + set.ROI + '%' 
                        p
                          a.btn.btn-default(href='#', role='button') View details Â»
            .panel.panel-default
                .panel-heading
                    h3.panel-title: a(href='/keystone/signin') Your Investments
                .panel-body
                    p Keystone includes session management and default sign-in and sign-out views.
                    p Sign in with the username <code>demo@keystonejs.com</code> and the password <code>demo</code>
                    if user
                        a(href='/keystone').btn.btn-default Open Admin UI
                        a(href='/keystone/signout').btn.btn-link Sign out
                    else
                        a(href='/keystone/signin').btn.btn-default Sign in
            .panel.panel-default
                .panel-heading
                    h3.panel-title: a(href='/contact') Contact Us
                .panel-body
                    p Want to write an article for our blog? Have specific questions about a particular Lego investment? Need to find a bunch of rare minifigs? We welcome any and all questions/comments!
                    a(href='/contact').btn.btn-default Contact Us
